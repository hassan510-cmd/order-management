<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Category -->
        <record id="module_category_order_management" model="ir.module.category">
            <field name="name">Order Management</field>
            <field name="description">User access level for Order Management System</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- User Group -->
        <record id="group_order_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_order_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Manager Group -->
        <record id="group_order_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_order_management"/>
            <field name="implied_ids" eval="[(4, ref('group_order_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- Record Rules -->
        <record id="order_management_user_rule" model="ir.rule">
            <field name="name">Order Management: User - Own Orders</field>
            <field name="model_id" ref="model_order_management"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_order_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
        <record id="order_management_manager_rule" model="ir.rule">
            <field name="name">Order Management: Manager - All Orders</field>
            <field name="model_id" ref="model_order_management"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_order_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
    </data>
</odoo>