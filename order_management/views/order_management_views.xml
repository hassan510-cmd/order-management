<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_order_management_tree" model="ir.ui.view">
        <field name="name">order.management.tree</field>
        <field name="model">order.management</field>
        <field name="arch" type="xml">
            <tree string="Orders" decoration-info="state=='draft'" decoration-muted="state=='cancelled'" decoration-success="state in ['ready', 'delivered']">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="order_date"/>
                <field name="user_id"/>
                <field name="item_count"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-primary="state=='preparing'" decoration-warning="state=='packing'" decoration-success="state in ['ready', 'delivered']" decoration-danger="state=='cancelled'"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_order_management_form" model="ir.ui.view">
        <field name="name">order.management.form</field>
        <field name="model">order.management</field>
        <field name="arch" type="xml">
            <form string="Order">
                <header>
                    <button name="action_confirm" string="Move to Preparing" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_process" string="Move to Packing" type="object" class="oe_highlight" invisible="state != 'preparing'"/>
                    <button name="action_done" string="Mark as Ready" type="object" class="oe_highlight" invisible="state != 'packing'"/>
                    <button name="action_deliver" string="Deliver" type="object" class="oe_highlight" invisible="state != 'ready'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['ready', 'delivered', 'cancelled']"/>
                    <button name="action_draft" string="Reset to Draft" type="object" invisible="state not in ['preparing', 'packing', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,preparing,packing,ready,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_order_report)d" type="action" class="oe_stat_button" icon="fa-print" string="Print Order">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Print Order</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id" readonly="state in ['ready', 'delivered']"/>
                            <field name="order_date" readonly="state in ['ready', 'delivered']"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="state in ['ready', 'delivered']"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Items" name="items">
                            <field name="item_ids" readonly="state in ['ready', 'delivered']">
                                <tree editable="bottom" delete="state not in ['ready', 'delivered']">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="product_name"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" sum="Total"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="state" column_invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        <page string="Other Info" name="other">
                            <group>
                                <field name="notes" placeholder="Add internal notes..." readonly="state in ['ready', 'delivered']"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_order_management_search" model="ir.ui.view">
        <field name="name">order.management.search</field>
        <field name="model">order.management</field>
        <field name="arch" type="xml">
            <search string="Orders">
                <field name="name" string="Order Reference"/>
                <field name="customer_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="My Orders" name="my_orders" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Preparing" name="preparing" domain="[('state', '=', 'preparing')]"/>
                <filter string="Packing" name="packing" domain="[('state', '=', 'packing')]"/>
                <filter string="Ready" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Order Date" name="order_date" date="order_date"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Salesperson" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Order Date" name="group_order_date" context="{'group_by': 'order_date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Kanban View -->
    <record id="view_order_management_kanban" model="ir.ui.view">
        <field name="name">order.management.kanban</field>
        <field name="model">order.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-8">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-4 text-end">
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'preparing': 'primary', 'packing': 'warning', 'ready': 'success', 'delivered': 'success', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <field name="customer_id"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <field name="total_amount" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_order_management" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">order.management</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_orders': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first order
            </p>
            <p>
                Click the create button to start managing orders.
            </p>
        </field>
    </record>
    
</odoo>